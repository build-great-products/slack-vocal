{
	"name": "slack-vocal",
	"version": "1.0.0",
	"description": "A tool to track and visualize Slack message activity for a specific user",
	"type": "module",
	"main": "src/index.js",
	"scripts": {
		"check": "tsc --noEmit",
		"start": "node --no-warnings --experimental-strip-types --env-file=.env ./src/index.ts",
		"lint": "biome check .",
		"format": "biome format --write ."
	},
	"keywords": ["slack", "analytics", "visualization"],
	"author": "George Czabania",
	"license": "ISC",
	"packageManager": "pnpm@10.7.0",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "22.13.15",
		"typescript": "5.8.2"
	},
	"dependencies": {
		"@slack/web-api": "7.9.1",
		"chart.js": "4.4.8",
		"date-fns": "4.1.0"
	}
}
